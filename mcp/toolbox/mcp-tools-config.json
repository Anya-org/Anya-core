  "mcpServers": {
    "mem0-knowledge": {
      "command": "pipx",
      "args": [
        "run",
        "mem0-mcp-for-pm==0.3.2",
        "--log=off"
      ],
      "env": {
        "MEM0_API_KEY": "${MEM0_API_KEY}"
      },
      "protocolVersion": "2024-11-05",
      "capabilities": {
        "resources": {
          "listChanged": true
        },
        "tools": {
          "listChanged": true
        }
      },
      "serverInfo": {
        "name": "mem0-knowledge",
        "version": "0.3.2",
        "description": "Personal memory and knowledge management for project context"
      },
      "features": {
        "contextRetention": true,
        "knowledgeGraph": true,
        "projectMemory": true,
        "crossSessionContinuity": true,
        "semanticSearch": true
      }
    },
    "github-tools": {
      "command": "npx",
      "args": [
        "@modelcontextprotocol/server-github"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
      },
      "protocolVersion": "2024-11-05",
      "capabilities": {
        "tools": {
          "listChanged": true
        }
